{
  "environment" : "development",
  "server": {
    "host": "localhost",
    "port": 3000,
    "pubkey": "",
    "secretKey": "",
    "tosFilePath" : "resources/tos.md",
    "adminPanel": {
      "masterPassword": ""
    },
    "availableModules": {
      "nostraddress" :{
        "enabled": true,
        "path": "/nostraddress",
        "methods": ["GET"],
        "description": "Returns the pubkey of a nostr address name"
      },
      "media":{
        "enabled": true,
        "path": "/media",
        "methods": ["GET","POST","PUT","DELETE"],
        "description": "This module handles media uploads and downloads."
      },
      "lightning" :{
        "enabled": true,
        "path": "/lightningaddress",
        "methods": ["GET","PUT", "DELETE"],
        "description": "Lightning redirections for nostr addresses."
      },
      "verify" :{
        "enabled": true,
        "path": "/verify",
        "methods": ["POST"],
        "description": "This module can verify a nostr note integrity."
      },
      "register" : {
        "enabled": true,
        "path": "/register",
        "methods": ["POST"],
        "description": "Register new usernames from trusted pubkeys."
      },
      "domains" : {
        "enabled": true,
        "path": "/domains",
        "methods": ["GET"],
        "description": "Get the list of registered domains."
      },
      "admin" : {
        "enabled": true,
        "path": "/admin",
        "methods": ["GET","POST"],
        "description": "Admin API, reboot, status, etc."
      },
      "frontend" : {
        "enabled": true,
        "path": "/",
        "methods": ["GET","POST"],
        "description": "Frontend, login, register, etc."
      }
    }
  },
  "database": {
    "host": "127.0.0.1",
    "user": "nostrcheck",
    "password": "nostrcheck",
    "database": "nostrcheck",
    "droptables": false
  },
  "media" : {
    "maxMBfilesize": 100,
    "tempPath": "tmp/",
    "mediaPath": "media/",
    "notFoundFilePath" : "resources/file-not-found.webp",
    "allowPublicUploads" : true,
    "transform" : {
      "media":{
          "undefined" : {
            "width" : "640",
            "height" : "480"
          },
          "image" : {
            "width" : "1280",
            "height" : "960"
          },
          "video" : {
            "width" : "720",
            "height" : "480"
          }
      },
      "avatar" : {
        "width" : "400",
        "height" : "400"
      },
      "banner" : {
        "width" : "900",
        "height" : "300"
      }
    }
  },
  "torrent": {
    "enableTorrentSeeding": false,
    "torrentPort": 6881,
    "dhtPort": 6882
  },
  "logger" :  {
    "minLevel": "5", 
    "filename": "nostrcheck-api",
    "size": "50M", 
    "interval": "60d",
    "compression": "gzip"
  },
  "session" : {
    "secret": "nostrcheck",
    "maxAge": 2592000000
  }
}