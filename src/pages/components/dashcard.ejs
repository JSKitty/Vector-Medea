<div id="<%- dashcardId %>" class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card mb-3 shadow-sm" style="min-height: 180px">
            <div class="card-body text-center">
                <% if (link) { %>
                    <a href = "<%- link %>" class="text-decoration-none text-reset">
                    <% } %>
                <div class="d-flex justify-content-between align-items-center">
                    <h5 id="<%- dashcardId %>-name" class="card-title mb-0"></h5>
                    <div id="<%- dashcardId %>-icon-container">
                        <i id="<%- dashcardId %>-icon" class="fas fa-chart-simple fa-3x card-icon"></i>
                    </div>
                </div>
                <h1 id="<%- dashcardId %>-text" class="display-2 font-weight-bold">0</h1>     
                <% if (link) { %>
                </a>
                <% } %>
            </div>
            <button id="<%- dashcardId %>-reload-button" class="btn btn-reload"><i class="fas fa-sync-alt"></i></button>
    </div>
</div>

<style>
    .card {
        border: 1px solid #dedede;
        border-radius: 10px;
        transition: transform 0.3s;
        background-color: #edebf1;
        color: #2c2b2b;
    }
    
    .card:hover {
        transform: scale(1.05);
    }
    
    .card-title {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: #575656;
    }

    .card-icon {
        color: #c87bff;
    }   

    .card-icon-container {
        width: 55px;
        height: 55px;
    }


    .btn-reload {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background-color: rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 50%;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-reload:hover {
        background-color: rgba(0, 0, 0, 0.2); 
    }

    .btn-reload i {
        color: #4d4d4d; 
        font-size: 14px; 
    }
    
</style>