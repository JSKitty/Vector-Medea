<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card mb-3 shadow-sm">
        <% if (link) { %>
        <a href = "<%- link %>" class="text-decoration-none text-reset">
        <% } %>
            <div class="card-body text-center">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><%- dashcardName %></h5>
                    <div class="card-icon-container">
                        <% if (icon == "chart") { %>
                            <i class="fas fa-chart-simple fa-3x card-icon"></i>
                        <% } else if (icon == "warning") { %>
                            <i class="fas fa-exclamation-triangle text-warning fa-3x card-icon"></i>
                        <% } else if (icon == "satoshi") { %>
                            <i class="fas fa-bolt-lightning text-warning fa-3x card-icon"></i>
                        <% } else if (icon == "doughnut") { %>
                            <% if (link.toString().startsWith("#")) { link = link.replace(/^#/, ''); } %>
                            <canvas id="<%- link %>-checked-doughnut"> </canvas>
                        <% }  %>
                    </div>
                </div>
                <h1 id="<%- dashcardName %>" class="display-2 font-weight-bold"></h1>     
            </div>
        <% if (link) { %>
        </a>
        <% } %>
    </div>
</div>
<script>
document.getElementById('<%- dashcardName %>').textContent = JSON.parse("<%- data %>").length || JSON.parse("<%- data %>");
</script>

<style>
    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.3s;
        background-color: #edebf3;

    }
    
    .card:hover {
        transform: scale(1.05);
    }
    
    .card-title {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: #575656;
    }

    .card-icon {
        color: #c87bff;
    }   

    .card-icon-container {
        width: 50px;
        height: 50px;
    }
    
    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>